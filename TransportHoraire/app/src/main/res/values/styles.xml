<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layouStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">#222734</item>
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:colorAccent">#EF3B6B</item>
        <item name="android:textColor">#4E4D4A</item>
    </style>

    <style name="radio_buttons">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#4E4D4A</item>
        <item name="android:width">300dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
