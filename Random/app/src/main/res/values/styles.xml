<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="home" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/claire</item>
        <item name="colorPrimaryDark">@color/medium</item>
        <item name="colorAccent">@color/foncer</item>
    </style>

    <style name="bouton">
        <item name="android:textColor">@color/claire</item>
        <item name="android:colorBackground">@color/medium</item>
        <item name="android:colorForeground">@color/foncer</item>
        <item name="android:textSize">50sp</item>
    </style>

</resources>
