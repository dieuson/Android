<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.dieuson.random.roll_the_dice">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_de_de"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:id="@+id/type_lance"
        android:layout_alignParentTop="true"
        android:textColor="@color/foncer"
        android:layout_centerHorizontal="true"
        tools:ignore="UnusedAttribute" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/roll_the_dice"
        android:fontFamily="cursive"
        android:id="@+id/button_roll"
        android:layout_alignParentBottom="true"
        android:textSize="30sp"
        android:background="@drawable/bouton_custom"
        android:textColor="@color/claire"
        android:layout_centerHorizontal="true"
        style="@android:style/Widget.Button"
        tools:ignore="UnusedAttribute" />


    <ImageView
        app:srcCompat="@drawable/dice_1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/show_dice"
        tools:ignore="ContentDescription"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:visibility="visible" />

    <TextView
        android:textSize="180sp"
        android:textAlignment="center"
        android:textColor="@color/medium"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:id="@+id/result_roll" />


</RelativeLayout>
