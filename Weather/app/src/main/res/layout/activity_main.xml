<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.virgile.weather.MainActivity">

    <ImageView
        android:layout_height="50dp"
        app:srcCompat="@color/colorPrimaryDark"
        android:id="@+id/visu1"
        android:layout_width="300dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="39dp"
        android:contentDescription="@string/visu_temp" />

    <TextView
        android:layout_height="50dp"
        android:layout_width="300dp"
        android:id="@+id/temp1"
        android:layout_below="@+id/visu1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:contentDescription="@string/visu_temp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temp1"
        android:layout_centerHorizontal="true"
        android:id="@+id/city"
        android:contentDescription="@string/visu_temp" />

    <Button
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/temp1"
        android:layout_toLeftOf="@+id/city"
        android:layout_toStartOf="@+id/city"
        android:layout_marginTop="20dp"
        android:id="@+id/button" />

</RelativeLayout>
